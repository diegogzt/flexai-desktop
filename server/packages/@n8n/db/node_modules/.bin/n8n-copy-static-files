#!/bin/sh
basedir=$(dirname "$(echo "$0" | sed -e 's,\\,/,g')")

case `uname` in
    *CYGWIN*|*MINGW*|*MSYS*)
        if command -v cygpath > /dev/null 2>&1; then
            basedir=`cygpath -w "$basedir"`
        fi
    ;;
esac

if [ -z "$NODE_PATH" ]; then
  export NODE_PATH="/root/project-flexai/flexai/packages/core/bin/node_modules:/root/project-flexai/flexai/packages/core/node_modules:/root/project-flexai/flexai/packages/node_modules:/root/project-flexai/flexai/node_modules:/root/project-flexai/node_modules:/root/node_modules:/node_modules:/root/project-flexai/flexai/node_modules/.pnpm/node_modules"
else
  export NODE_PATH="/root/project-flexai/flexai/packages/core/bin/node_modules:/root/project-flexai/flexai/packages/core/node_modules:/root/project-flexai/flexai/packages/node_modules:/root/project-flexai/flexai/node_modules:/root/project-flexai/node_modules:/root/node_modules:/node_modules:/root/project-flexai/flexai/node_modules/.pnpm/node_modules:$NODE_PATH"
fi
if [ -x "$basedir/node" ]; then
  exec "$basedir/node"  "$basedir/../n8n-core/bin/copy-static-files" "$@"
else
  exec node  "$basedir/../n8n-core/bin/copy-static-files" "$@"
fi
