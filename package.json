{
  "name": "flexai-desktop",
  "version": "1.0.0",
  "description": "Desktop installer and manager for FlexAI",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "postinstall": "cd server && pnpm install && pnpm build",
    "build": "electron-builder",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "author": "FlexAI Team",
  "license": "MIT",
  "dependencies": {
    "electron-is-dev": "^2.0.0",
    "fix-path": "^4.0.0",
    "portfinder": "^1.0.32",
    "wait-on": "^7.2.0"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "build": {
    "appId": "com.flexai.desktop",
    "productName": "FlexAI Desktop",
    "mac": {
      "category": "public.app-category.developer-tools",
      "target": "dmg"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage",
      "category": "Development"
    },
    "extraResources": [
      {
        "from": "server",
        "to": "server",
        "filter": ["!**/*.ts", "!**/test/**", "!**/src/**"]
      }
    ]
  }
}
