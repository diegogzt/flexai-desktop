{
  "name": "flexai-desktop",
  "version": "1.0.0",
  "description": "Desktop installer and manager for FlexAI",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "author": "FlexAI Team",
  "license": "MIT",
  "dependencies": {
    "dockerode": "^4.0.0",
    "electron-is-dev": "^2.0.0",
    "fix-path": "^4.0.0",
    "shelljs": "^0.8.5"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "build": {
    "appId": "com.flexai.desktop",
    "productName": "FlexAI Desktop",
    "mac": {
      "category": "public.app-category.developer-tools",
      "target": "dmg"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage",
      "category": "Development"
    }
  }
}
